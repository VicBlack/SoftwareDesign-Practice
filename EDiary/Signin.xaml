<Window x:Class="EDiary.Signin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EDiary"
        mc:Ignorable="d" Background="AliceBlue" Width="300" Height="150" WindowStartupLocation="CenterOwner"
      d:DesignHeight="150" d:DesignWidth="300"
      Title="Signup">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0">
            <Label Content="帐号:" VerticalContentAlignment="Center" DockPanel.Dock="Left"/>
            <TextBox x:Name="tbid" VerticalContentAlignment="Center" DockPanel.Dock="Right"/>
        </DockPanel>
        <DockPanel Grid.Row="1">
            <Label Content="密码:" VerticalContentAlignment="Center" DockPanel.Dock="Left"/>
            <PasswordBox x:Name="tbpwd" MaxLength="16" VerticalContentAlignment="Center" DockPanel.Dock="Right"/>
        </DockPanel>        
        <DockPanel Grid.Row="2">
            <Button Content="登录" Click="OnSubmitSignin"/>
        </DockPanel>
    </Grid>
</Window>
